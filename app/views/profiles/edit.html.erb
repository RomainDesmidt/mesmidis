<div class="wrapper">
  <h1>Mon Profil</h1>
  <div class="container">
    <div class="card_coordonnees">
      <h4>Mes Coordonnées</h4>
      <div class="row">
        <div class="col s7">
          <%= simple_form_for @user, url: profile_path do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <%=f.input :first_name %>
              </div>
              <div class="input-field col s6">
                <%=f.input :last_name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%=f.input :phone_number, input_html: { "data-length" => 12 } %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%=f.input :address %>
              </div>
            </div>
        </div>
      </div>
    </div>
    <div class="card_preferences">
      <h4>Mes Préférences</h4>
      <div class="row">
        <div class="col s7">
            <div class="row">
              <div class="input-field col s6">
                <%=f.input :first_name %>
              </div>
              <div class="input-field col s6">
                <%=f.input :last_name %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%=f.input :phone_number, input_html: { "data-length" => 12 } %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%=f.input :address %>
              </div>
            </div>
            <%=f.button :submit%>
              <i class="material-icons right">send</i>
            </div>
            </div>
            <% end %>
        </div>
      </div>
    </div>
