<div class="col s12 m6 l4">
          <div class="card hoverable">
            <div class="card-image">
              <a class="btn-floating halfway-fab waves-effect waves-light"><i class="material-icons">add</i></a>
              <%=  cl_image_tag(meal.picture,
              height: 220, crop: :fill)  %>
            </div>
            <div class="card-content">
              <div class="card-category">asiatique</div>
              <span class="card-name"><%= meal.name.upcase %></span>
              <span class="card-restaurant"><%= meal.restaurant_name %> (<strong>500m</strong>)</span>
              <span class="card-address"><%= meal.restaurant_address %></span>
            </div>
          </div>
        </div>
