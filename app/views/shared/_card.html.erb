      <%=  cl_image_tag(meal.picture,
      height: 240, crop: :fill)  %>-->

      <span class="card-name uppercase"><%= meal.name %></span>
    </div>
    <div class="card-content">
      <div class="card-category"><%= meal.category.name %></div>

      <span class="card-button"><a href="#!" class="waves-effect waves-light btn btn-small waves-green uppercase">je réserve</a></span>
