<div class="col s12 m6 l4">
  <div class="card hoverable card-meal">
    <div class="card-image">
      <a href="#<%= meal.id %><%= meal.restaurant_id %>" class="btn-floating halfway-fab waves-effect waves-light"><i class="material-icons">add</i></a>
      <%=  cl_image_tag(meal.picture,
      height: 240, crop: :fill)  %>
    </div>
    <div class="card-content">
      <div class="card-category">asiatique</div>
      <span class="card-name uppercase"><%= meal.name %></span>
      <span class="card-restaurant"><%= meal.restaurant_name %> (<strong>500m</strong>)</span>
      <span class="card-address"><%= meal.restaurant_address %></span>
    </div>
  </div>
</div>
<!-- Modal Structure -->
<div id="<%= meal.id %><%= meal.restaurant_id %>" class="modal">
  <div class="modal-content">

    <div class="row">
    <div class="col s12"><h4 class="uppercase"><%= meal.name %></h4></div>
      <div class="col s6"><%=  cl_image_tag(meal.picture,
      height: 220, crop: :fill)  %></div>
      <div class="col s6"><p>description du plat proposé par le restaurateur</p></div>
      <div class="col s12">
      <p>Restaurant : <%= meal.restaurant_name %></p>
      <p>adresse : <%= meal.restaurant_address %></p>
      </div>
    </div>
  </div>
  <div class="modal-footer center">
    <a href="#!" class=" modal-action modal-close waves-effect waves-light btn-large waves-green btn-flat uppercase">je réserve</a>
  </div>
</div>

