
<div class="row login-form center">
  <div class="col s12">
    <div class="card hoverable">
      <div class="card-content">
        <span class="card-title center">DEMANDER UNE INVITATION</span>
        <div class="divider"></div>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
        <span class="fa fa-user-o icon-registration-input"></span>
          <%= f.input :first_name, required: true, autofocus: true %>
        <span class="fa fa-user-o icon-registration-input"></span>
          <%= f.input :last_name, required: true %>
        <span class="fa fa-envelope-o icon-registration-input"></span>
          <%= f.input :email, required: true %>
        <span class="fa fa-lock icon-registration-input"></span>
          <%= f.input :password, required: true, label_html: { class: 'left' }, hint: ("#{@minimum_password_length} caractÃ¨res minimum, " if @minimum_password_length) %>
          <span class="fa fa-lock icon-registration-input"></span>
          <%= f.input :password_confirmation, required: true, label_html: { class: 'left' } %>
        </div>
        <div class="form-actions center">
            <%= f.button :submit, "Sign Up" %>
          </div>
        <% end %>
      </div>
      <div class="card-action">
        <div class="devise-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
