<div class="container">
  <h2>Vous mangez quoi ce midi ? </h2>
</div>
<div class="media">
  <div class="media-body">
    <div class="media-section">
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input id="city" type="text" class="validate" placeholder="<%= current_user.address %> <%= current_user.city %>">
              <label class="active" for="city">adresse du pickup</label>
            </div>
            <div class="input-field col s12">
              <ul class="collapsible popout" data-collapsible="accordion">
              <li>
      <div class="collapsible-header">Plus de filtres</div>
      <div class="collapsible-body"><span></span></div>
    </li>
    </ul>
    </div>
          </div>
        </form>
      </div>
    </div>

    <%= current_user.order_made_today.meal.name %>

    <%= render 'shared/meal_of_day' %>
<div class="media-section">
      <div class="row">
        <% current_user.order_made_today do |meal| %>
        <%= render 'shared/card', meal: meal %>
        <% end %>
      </div>

    </div>
    <div class="media-section">
      <div class="row">
        <% @today_meals.each do |meal| %>
        <%= render 'shared/card', meal: meal %>
        <% end %>
      </div>

    </div>
  </div>
  <div class="media-aside">
    <div class="media-section">
    <div id="map" style="width: 100%; height: 600px;"></div>
      <%= render '/shared/js-googlemap' %>
    </div>
  </div>
</div>
