<% if @meal_reserved == nil %>
<div class="row">
  <div class="col s12 m9">
    <h2 class="center">Vous mangez quoi ce midi ?</h2>
  </div>
  <div class="col s12 m3"></div>
  <div></div>
</div>
<div class="content-meals">
  <div class="row">
    <div class="col s12 m9">
<%= render 'shared/search-meal' %>
      <% @today_meals.each do |meal| %>
        <%= render 'shared/card-meal', meal: meal, order: @order %>
        <% end %>

    </div>
    <div class="col s12 m3" style="position: fixed; max-height: calc(100vh - 75px);min-height: calc(100vh - 75px);right: 18px;padding-right: 0;padding-left: 0; z-index: 3;">
      <div id="map" style="width: 100%; height: 600px;"></div>
        <%= render '/shared/js-googlemap' %>
    </div>
  </div>
</div>

  <% else %>
  <center>
<div class="row">
  <div class="col s12 m12">
    <h2 class="center title-done">Votre réservation du midi</h2>
  </div>
  <!-- <div class="content-meals"> -->

  <div class="col s12 m2"></div>
  <div class="col s12 m4">
    <!-- display meal order for the day -->
    <%= render 'shared/card-meal-of-day' %>
  </div>
  <div class="col s12 m4">
    <div id="map" style="width: 100%; height: 550px;"></div>
    <%= render '/shared/js-googlemap' %>
  </div>
  <div class="col s12 m2"></div>
  <!-- </div> -->
  <div class="col s12 m12">
    <div class="annulation-meal">
    <%= link_to 'annuler ma réservation', order_path(@meal_reserved.id), method: :delete, class: "uppercase", data: { confirm: 'Confirmez-vous votre annulation ?', 'confirm-button-text': 'JE CONFIRME','cancel-button-text': 'RETOUR','confirm-button-color': '#3FA9A7','sweet-alert-type': 'question' } %>
      -
      <%= link_to 'me renvoyer un mail de confirmation', order_path(@meal_reserved.id), method: :delete, class: "uppercase", data: { confirm: 'Confirmez-vous votre annulation ?', 'confirm-button-text': 'JE CONFIRME','cancel-button-text': 'RETOUR','confirm-button-color': '#3FA9A7','sweet-alert-type': 'question' } %>

      </div>
  </div>
</div>
</center>
<% end %>





